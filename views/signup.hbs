<div class="container-login">
    <div class="center">
        <h4>Sign Up</h4>
        <br>
        <form action="" method="post">
          <div class="row">
              <div class="input-field col s12">
                  <input id="usernameField" type="text" class="validate" name="usr" required>
                  <label for="username">Username</label>
              </div>
          </div>
          <div class="row">
              <div class="input-field col s12">
                  <input id="emailField" type="text" class="validate" name="email" required>
                  <label for="email">Email</label>
              </div>
          </div>
          <div class="row">
              <div class="input-field col s12">
                  <input id="nameField" type="text" class="validate" name="name" required>
                  <label for="name">Full name</label>
              </div>
          </div>
          <div class="row">
              <div class="input-field col s12">
                  <input id="locField" type="text" class="validate" name="loc" required>
                  <label for="location">Country,City</label>
              </div>
          </div>
          <div class="row">
              <div class="input-field col s12">
                  <input id="passwordField" type="password" name="psw" for="password" class="validate" required>
                  <label for="password">Password</label>
              </div>
          </div>
          <div class="row">
              <div class="input-field col s12">
                  <input id="confirmPasswordField" type="password" name="conf_psw" for="confirm_password" class="validate" required>
                  <label for="confirm_password">Confirm Password</label>
              </div>
          </div>
          <br>
          <br>

            <input type="submit" class="form-control btn blue waves-effect waves-dark" style="width: 70%">
        </form>
        <br>
        <br>
        <span><a class="btn-flat" href="/login">Already have an account?</a>
    </div>
</div>
